{% extends 'base.html.twig' %}

{% block title %}Items{% if tag %} > {{ tag }}{% endif %}{% endblock %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col" class="text-right" style="width:4rem">Qty</th>
                <th scope="col" class="text-right" style="width:10rem">Est. Value</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td><a href="{{ path('inventory_get', {'id': item.id}) }}">{{ item.name }}</a></td>
                    <td class="text-right">{{ item.quantity }}</td>
                    <td class="text-right">{{ item.totalValue|localizedcurrency('USD') }}
                </tr>
            {% else %}
                <tr>
                    <td>No items. Would you like to <a href="{{ path('inventory_add') }}">add one</a>?</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('inventory_add') }}?return_to=list">Add</a>
{% endblock %}
